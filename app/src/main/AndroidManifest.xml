<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softsquared.damoyoung">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id_for_test"/>

        <receiver android:name="com.softsquared.template.NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <activity
            android:name=".src.priority.PriorityActivity"
            android:label="@string/title_activity_priority"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".src.main.MainActivity"
            tools:ignore="ExtraText"></activity>
        <activity android:name=".src.setting.SettingActivity" />
        <activity
            android:name=".src.popUpBookmark.PopupBookmarkActivity"
            android:theme="@style/CustomDialogTheme" />
        <activity
            android:name=".src.popUpWordbookMove.PopupWordMoveActivity"
            android:theme="@style/CustomDialogTheme" />
        <activity
            android:name=".src.popUpWordbookCopy.PopupWordCopyActivity"
            android:theme="@style/CustomDialogTheme" />
        <activity android:name=".src.bookmark.BookmarkActivity" />
        <activity android:name=".src.wordbook.WordbookActivity" />
        <activity android:name=".src.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.history.HistoryActivity" />
    </application>

</manifest>