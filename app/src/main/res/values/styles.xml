<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>

    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">#4a4a4a</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#9b9b9b</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">#ff7876</item>                    <!-- 하단 움직이는 바 색-->
    </style>
</resources>
