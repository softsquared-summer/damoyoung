<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDamoyoungWhite"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorDamoyoungWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:onClick="onClick"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorDamoyoungWhite"
            android:text="@string/setting"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorDamoyoungWhite"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBookmarkLine" />

        <TextView
            android:id="@+id/tv_setting_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDamoyoungWhite"
            android:onClick="onClick"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/site_priority"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorBookmarkLine" />

    <ExpandableListView
        android:id="@+id/elv_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@color/colorDamoyoungWhite"
        android:childDivider="@color/colorBookmarkLine"
        android:childIndicator="@null"
        android:divider="@color/colorBookmarkLine"
        android:dividerHeight="0.5dp"
        android:groupIndicator="@null" />


</LinearLayout>