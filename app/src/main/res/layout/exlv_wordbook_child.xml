<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDamoyoungWhite">

    <TextView
        android:id="@+id/tv_wordbook_child_sentence"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
       android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:text="hi i am ~~~~~~~~~aasdasdaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa~"
        android:paddingStart="36dp"
        android:layout_marginTop="5dp"
        />
    <CheckBox
        android:id="@+id/cb_wordbook_child"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_small_check_box"
        android:button="@null"
        />
</LinearLayout>