<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorDamoyoungWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@color/colorDamoyoungWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bookmark_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_bookmark_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@color/colorDamoyoungWhite"
            android:text="북마크"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />


    </RelativeLayout>

    <ListView
        android:id="@+id/lv_bookmark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/up_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/tv_bookmark_add_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:onClick="onClick"
        android:padding="8dp"
            android:text="@string/newFolder"
            android:textColor="@color/colorDamoyoungText"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_bookmark_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="@string/edit"
            android:textColor="@color/colorDamoyoungText"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bookmark_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:onClick="onClick"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="@string/confirm"
            android:textColor="@color/colorDamoyoungText"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>